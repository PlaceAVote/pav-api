          "format": "boolean"
        },
        "total_followers": {
          "type": "number",
          "format": "number"
        },
        "total_following": {
          "type": "number",
          "format": "number"
        }
      }
    },
    "NewFacebookUserProfileBody": {
      "title": "NewUserProfile",
