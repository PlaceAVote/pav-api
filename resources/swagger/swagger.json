        }
      }
    },
    "TimelineEventRecords": {
      "type": "object",
      "properties": {
        "next-page": {
          "type": "number",
          "format": "If equal to zero then there are no more results"
        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TimelineEventRecord"
          }
        }
      }
    },
    "TimelineEventRecord": {
      "type": "object",
      "properties": {
