{
  "swagger": "2.0",
  "info": {
    "version": "0.0.0",
    "title": "PlaceAVote user api",
    "description": "PlaceAVote user api for registering and authenticating existing users"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user/notifications": {
      "get": {
        "description": "Get users notifications",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "token to be passed as a header",
            "required": true,
            "type": "string",
            "items": {
              "type": "string",
              "format": "PAV_AUTH_TOKEN token"
            }
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "format": "reply"
                  },
                  "comment_id": {
                    "type": "string",
                    "format": "string"
                  },
                  "from_user_id": {
                    "type": "string",
                    "format": "string"
                  },
                  "from_name": {
                    "type": "string",
                    "format": "string"
                  },
                  "user": {
                    "type": "string",
                    "format": "string"
                  },
                  "bill_id": {
                    "type": "string",
                    "format": "string"
                  },
                  "timestamp": {
                    "type": "number",
                    "format": "number"
                  },
                  "checked": {
                    "type": "boolean",
                    "format": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "description": "Gets `UserProfile` object.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "token to be passed as a header",
            "required": true,
            "type": "string",
            "items": {
              "type": "string",
              "format": "PAV_AUTH_TOKEN token"
            }
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "title": "UserProfile",
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "test@place.com"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "dob": {
                  "type": "string",
                  "format": "01/10/1999"
                },
                "country_code": {
                  "type": "string",
                  "format": "USA"
                },
                "topics": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "[Defence, Arts]"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Register new user",
        "parameters": [
          {
            "name": "NewUser",
            "in": "body",
            "required": true,
            "schema": {
              "title": "NewUserProfile",
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "test@place.com"
                },
                "password": {
                  "type": "string"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "dob": {
                  "type": "string",
                  "format": "01/10/1999"
                },
                "country_code": {
                  "type": "string",
                  "format": "USA"
                },
                "topics": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "[Defence, Arts]"
                  }
                }
              }
            }
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "201": {
            "description": "Successful response",
            "schema": {
              "title": "UserProfile",
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "test@place.com"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "dob": {
                  "type": "string",
                  "format": "01/10/1999"
                },
                "country_code": {
                  "type": "string",
                  "format": "USA"
                },
                "topics": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "[Defence, Arts]"
                  }
                },
                "token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/user/authenticate": {
      "post": {
        "description": "Authenticate existing user",
        "parameters": [
          {
            "name": "Login",
            "in": "body",
            "required": true,
            "schema": {
              "title": "Login Details",
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "test@place.com"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "title": "New Token",
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/user/confirm/{confirm-token}": {
      "post": {
        "description": "Confirm token sent in users email",
        "parameters": [
          {
            "name": "confirm-token",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "string"
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "201": {
            "description": "Successful response"
          },
          "401": {
            "description": "Invalid token"
          }
        }
      }
    }
  }
}