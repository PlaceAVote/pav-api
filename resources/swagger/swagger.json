        "description": "Mark notification if user has read it",
        "parameters": [
          {
            "$ref": "#/parameters/NotificationIDParam"
          },
          {
            "$ref": "#/parameters/TokenParam"
          }
        ],
        "tags": [
          "Users"
        ],
        "responses": {
          "201": {
            "description": "Successful response"
          },
          "401": {
            "description": "Not Authorized (Check Authentication Token)"
          }
