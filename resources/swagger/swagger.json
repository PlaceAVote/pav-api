        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NotificationRecord"
          }
        }
      }
    },
    "NotificationRecord": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "format": "reply"
        },
        "user_id": {
          "type": "string",
          "format": "string"
        },
        "timestamp": {
          "type": "number",
          "format": "number"
        },
        "read": {
          "type": "boolean",
          "format": "boolean"
        }
      }
    }
